<div>
<nav class="categories-nav">
<i class="fa-solid fa-bars"></i>
<p>Create Transaction</p>
</nav>
<%= form_with model:[@group, Expense.new], method: :post, local: true do |f| %>
<div class="new-group-form">
<%= f.text_field :name, :placeholder => "Name goes here...", required: true, class: "form-text" %>
<%= f.number_field :amount, :placeholder => "Amount goes here...", required: true, class: "form-text" %>
<p>
    <b>Select Category</b><br />
 <div class="recipe-food-food-area">
 <%Group.all.each do |category| %>
 <div class='category-item'>
    <%= f.radio_button :group_id, category.id %>  <%=category.name %><%= image_tag category.icon.url, :size => "50x50" %><br />
</div>
<% end %>
</div>
</p>
<%= f.submit "Create", data: {disable_with: "Creating..."}, class: "btn btn-primary" %>

</div>
<% end %>
</div>
<div class='footer footer-second'>
<p>
<i class="fa-solid fa-chevron-left"></i>
<%= link_to 'Back', group_expenses_path(@group.id) %>
</p>

<%= render 'shared/logout' %>
</div>